<div class="block block--cards">
  <div class="container">
    <div class="block__content">
      <!-- ko if: hasOrgs -->
      <!-- ko ifnot: postcodeRetrievalIssue -->
      <div class="card-sort">
        <span class="card-sort__title">Sort by:</span>
        <a class="card-sort__item" href="#a-z" data-bind="click: sortAToZ, css: { 'card-sort__item--selected': isSortedAToZ() }">A-Z</a> 
        <a class="card-sort__item" href="#nearest" data-bind="click: sortNearest, css: { 'card-sort__item--selected': isSortedNearest() }">Nearest</a>
      </div>
      <div data-bind="foreach: orgsToDisplay">
        <a data-bind="attr: { href: href } ">
          <article class="card card--brand-h">
            <div class="card__title">
              <h1 class="h2" data-bind="text: name"></h1>
            </div>
            <div class="card__details">
              <p class="card__details__description" data-bind="text: distanceDescription"></p>
              <a class="card__details__link" data-bind="attr: { href: href } ">More Information</a>
            </div>
          </article>
        </a>
      </div>
      <div class="card-pagination">
      <!-- ko if: hasMorePages -->
      <button class="btn btn--brand-e" data-bind="click: loadMore">
        <span class="btn__text">Load more</span>
      </button>
      <!-- /ko -->
      </div>
      <!-- /ko -->
      <!-- /ko -->
      <!-- ko ifnot: hasOrgs -->
      <p>Sorry, there are no organisations listed near your postcode, please try again.</p>
      <!-- /ko -->
      <!-- ko if: postcodeRetrievalIssue -->
      <p>Sorry, there was a problem with your postcode, please try an alternative postcode nearby.</p>
      <!-- /ko -->
    </div>
  </div>
</div>

